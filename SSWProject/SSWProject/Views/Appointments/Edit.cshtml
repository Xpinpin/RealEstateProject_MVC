@model SSWProject.Models.Appointment

@{
    ViewBag.Title = "EditAppointment";
}

@Html.Partial("RealEstateTemp")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="headerMain">
        <h2 style="text-align:center;">UPDATE APPOINTMENT</h2>
    </div>
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row" style="margin-left:15%; align-content:center;">
                <div class="col-lg-12 col-xs-12">

                    <div class="breadcrumb col-lg-10 col-md-12 ">

                        <div class="active col-lg-12" style="margin:auto; align-content:stretch;">
                            <div class="form-horizontal" style="margin-left:10%; padding: 3%">
                                <h4>Booking</h4>
                                <div style="color:red;font-size:large;">
                                    <b>@Html.Raw(TempData["Message"])</b>
                                </div>
                                <hr />

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.AgentID, "AgentID", htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("AgentID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.AgentID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.CustomerID, "CustomerID", htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-12">                                   
                                        @Html.TextBoxFor(model => model.Date,"{0: MM/dd/yyyy}" , new { htmlAttributes = new { @class = "form-control col-md-8"} })
                                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.StartTime, "{0:hh:mm tt}", new { htmlAttributes = new { @class = "form-control  col-md-8" } })
                                        @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.EndTime, "{0:hh:mm tt}", new { htmlAttributes = new { @class = "form-control col-md-8" } })
                                        @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn-group-toggle text-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
