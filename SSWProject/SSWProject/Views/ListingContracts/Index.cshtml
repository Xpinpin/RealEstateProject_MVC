@model IEnumerable<SSWProject.Models.ListingContract>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("RealEstateTemp")

<h2>Listing Contracts Viewing</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Agent.AgentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Listing.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Listing.CustomerName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSigned)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Agent.AgentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Listing.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Listing.CustomerName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSigned)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { listingId = item.ListingId, agentId = item.AgentId }) |*@
                @Html.ActionLink("Details", "Details", new { contractId = item.ContractID }) |
                @Html.ActionLink("Delete", "Delete", new { listingId = item.ListingId, agentId = item.AgentId }) |
                @Html.ActionLink("View Listings", "ViewListings", new { customerID = item.Listing.Customer.ID })

            </td>
        </tr>
    }

</table>
