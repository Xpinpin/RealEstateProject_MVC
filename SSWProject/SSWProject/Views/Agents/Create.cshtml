@model SSWProject.Models.Agent

@{
    ViewBag.Title = "CreateAgent";
}

@Html.Partial("RealEstateTemp")

@using (Html.BeginForm("Create", "Agents", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div id="headerMain">
        <h2 style="text-align:center;">CREATE AGENT</h2>
    </div>
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row" style="margin-left:15%; align-content:center;">
                <div class="col-lg-12 col-xs-12">

                    <div class="breadcrumb col-lg-10 col-md-12 ">

                        <div class="active col-lg-12" style="margin:auto; align-content:stretch;">
                            <div class="form-horizontal" style="margin-left:10%; padding: 3%">
                                <h4>Agent Information</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your first name" } })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your middle name (Optional)" } })
                                        @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your last name" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.LoggedInUserName, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">

                                        @Html.EditorFor(model => model.LoggedInUserName, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "form-control",
                                           id = "UserName",
                                           @onfocusout = "UserCheck()",
                                           @placeholder = "Enter your user name (Ex:jimcarter)"
                                       }
                                   })
                                        @Html.ValidationMessageFor(model => model.LoggedInUserName, "", new { @class = "text-danger" })
                                        <p id="Status"></p>
                                    </div>


                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.StreetAddress, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your street address (Ex:1234 Mountain Rd)" } })
                                        @Html.ValidationMessageFor(model => model.StreetAddress, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Municipality, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Municipality, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your municipality (Ex:Moncton)" } })
                                        @Html.ValidationMessageFor(model => model.Municipality, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Province, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EnumDropDownListFor(model => model.Province, "--- Please Select Your Province ---", new { @class = "form-control", @style = "height:30px"})
                                        @Html.ValidationMessageFor(model => model.Province, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.PostalCode, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your postal code (Ex:E5E 6H5)" } })
                                        @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.HomePhoneNumber, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.HomePhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your home phone" } })
                                        @Html.ValidationMessageFor(model => model.HomePhoneNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.CellPhoneNumber, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.CellPhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your cell phone" } })
                                        @Html.ValidationMessageFor(model => model.CellPhoneNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.OfficePhoneNumber, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.OfficePhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your office phone" } })
                                        @Html.ValidationMessageFor(model => model.OfficePhoneNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.OfficeEmail, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.OfficeEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your office email (Ex:username@hostname.com)" } })
                                        @Html.ValidationMessageFor(model => model.OfficeEmail, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DOB, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.SIN, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SIN, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your SIN number (Ex:165145365)" } })
                                        @Html.ValidationMessageFor(model => model.SIN, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Confirmed, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.CheckBoxFor(model => model.Confirmed)
                                        @Html.ValidationMessageFor(model => model.Confirmed, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                @*<div class="form-group">
                                    @Html.Label("Avatar", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input type="file" id="Avatar" name="upload" />
                                    </div>

                                </div>
                                <b>@ViewBag.msg</b>*@

                                @*<div class="form-group">
                                        @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "col-lg-2 col-lg-offset-1 col-md-2" })
                                        <div class="col-lg-4 col-lg-offset-1 col-md-10 ">
                                            <input type="file" id="ImageFile" name="ImageFile" />
                                            @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                                        </div>
                                    </div>*@

                                <div class="form-group">

                                    <input type="submit" value="Create" class="btn-group-toggle text-primary" />

                                </div>
                            </div>

                            <p>
                                @Html.ActionLink("Back to List", "Index")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="float-md-right">
                @Html.ActionLink("Agents Viewing", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
